<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/toolbar_multi_choice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_12sdp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/_32sdp"
            android:layout_height="@dimen/_32sdp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_back_circle"
            app:tint="@color/pink" />

        <TextView
            android:id="@+id/tv_mul_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/fat_font_1"
            android:text="@string/mul_type"
            android:textColor="@color/black"
            android:textSize="@dimen/_19ssp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar_multi_choice"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_12sdp"
        android:text="@string/timer"
        android:textColor="@color/black"
        android:textSize="@dimen/_19ssp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_fiftyfifty"
        android:layout_width="@dimen/_33sdp"
        android:layout_height="@dimen/_33sdp"
        android:layout_below="@id/timer"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_fiftyfifty" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_card"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_380sdp"
        android:layout_below="@id/iv_fiftyfifty"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_4sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        app:strokeColor="@color/black"
        app:strokeWidth="@dimen/_1sdp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_topic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_12sdp"
                android:text="@string/what_mean"
                android:textColor="@color/grey"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_word"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:layout_below="@id/tv_topic"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_4sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                app:strokeColor="@color/grey"
                app:strokeWidth="@dimen/_1sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_blue"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_word"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/word"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_19ssp"
                        android:textStyle="bold" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_ans_a"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@id/cv_word"
                android:layout_marginHorizontal="@dimen/_38sdp"
                android:layout_marginTop="@dimen/_12sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                app:strokeColor="@color/grey"
                app:strokeWidth="@dimen/_1sdp">

                <LinearLayout
                    android:id="@+id/ln_a"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_ans_a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/word"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_19ssp"
                        android:textStyle="bold" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_ans_b"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@id/cv_ans_a"
                android:layout_marginHorizontal="@dimen/_38sdp"
                android:layout_marginTop="@dimen/_12sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                app:strokeColor="@color/grey"
                app:strokeWidth="@dimen/_1sdp">

                <LinearLayout
                    android:id="@+id/ln_b"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_ans_b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/word"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_19ssp"
                        android:textStyle="bold" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_ans_c"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@id/cv_ans_b"
                android:layout_marginHorizontal="@dimen/_38sdp"
                android:layout_marginTop="@dimen/_12sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                app:strokeColor="@color/grey"
                app:strokeWidth="@dimen/_1sdp">

                <LinearLayout
                    android:id="@+id/ln_c"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_ans_c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/word"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_19ssp"
                        android:textStyle="bold" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_ans_d"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@id/cv_ans_c"
                android:layout_marginHorizontal="@dimen/_38sdp"
                android:layout_marginTop="@dimen/_12sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                app:strokeColor="@color/grey"
                app:strokeWidth="@dimen/_1sdp">

                <LinearLayout
                    android:id="@+id/ln_d"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_ans_d"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/word"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_19ssp"
                        android:textStyle="bold" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>


        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>
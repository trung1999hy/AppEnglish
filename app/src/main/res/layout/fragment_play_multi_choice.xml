<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_back_circle"
        app:tint="@color/pink" />

    <TextView
        android:id="@+id/tv_mul_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mul_type"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:fontFamily="@font/fat_font_1"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/timer"
        android:layout_below="@id/tv_mul_type"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:visibility="gone"
        android:layout_marginTop="16dp"
        android:id="@+id/timer"/>

    <Chronometer
        android:id="@+id/viewTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_mul_type"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:targetApi="24" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_below="@id/timer"
        app:strokeColor="@color/black"
        app:strokeWidth="1dp"
        app:cardCornerRadius="20dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="32dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_topic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/what_mean"
                android:layout_centerHorizontal="true"
                android:textColor="@color/grey"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginHorizontal="16dp"
                android:layout_below="@id/tv_topic"
                android:layout_marginTop="8dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/grey"
                android:id="@+id/cv_word"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_blue"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_word"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/word"
                        android:textSize="24sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="48dp"
                android:layout_below="@id/cv_word"
                android:layout_marginTop="16dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/grey"
                app:cardCornerRadius="20dp"
                android:id="@+id/cv_ans_a">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_ans_a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/word"
                        android:textSize="24sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="48dp"
                android:layout_below="@id/cv_ans_a"
                android:layout_marginTop="16dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/grey"
                app:cardCornerRadius="20dp"
                android:id="@+id/cv_ans_b">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_ans_b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/word"
                        android:textSize="24sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="48dp"
                android:layout_below="@id/cv_ans_b"
                android:layout_marginTop="16dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/grey"
                app:cardCornerRadius="20dp"
                android:id="@+id/cv_ans_c">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_ans_c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/word"
                        android:textSize="24sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="48dp"
                android:layout_below="@id/cv_ans_c"
                android:layout_marginTop="16dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/grey"
                app:cardCornerRadius="20dp"
                android:id="@+id/cv_ans_d">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_ans_d"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/word"
                        android:textSize="24sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>


        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>
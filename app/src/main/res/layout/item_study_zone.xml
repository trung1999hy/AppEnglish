<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="235dp"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="8dp"
    android:layout_marginStart="12dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="20dp"
        android:id="@+id/layout_win">

        <RelativeLayout
            android:id="@+id/layout_item_study"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/header_home_background">

            <TextView
                android:id="@+id/tv_title_study"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vocabulary"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="22sp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="20dp"/>

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_study_zone"
                android:layout_below="@+id/tv_title_study"
                android:id="@+id/ic_play"
                android:layout_marginStart="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/learning_now"
                android:layout_below="@id/tv_title_study"
                android:layout_toEndOf="@id/ic_play"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="8dp"/>

            <ImageView
                android:id="@+id/iv_title"
                android:layout_alignParentEnd="true"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginEnd="12dp"
                android:layout_centerVertical="true"
                android:src="@drawable/img_vocabulary"/>

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
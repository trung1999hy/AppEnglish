<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="235dp"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="8dp"
    android:layout_marginStart="12dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:id="@+id/layout_item_play"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/header_home_background">

            <TextView
                android:id="@+id/tv_game_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vocabulary"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="@dimen/_14ssp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="20dp"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_play"
                android:layout_below="@+id/tv_game_mode"
                android:id="@+id/ic_play"
                android:layout_marginStart="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/play_now"
                android:layout_below="@id/tv_game_mode"
                android:layout_toEndOf="@id/ic_play"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="8dp"/>

            <ImageView
                android:id="@+id/iv_mode"
                android:layout_alignParentEnd="true"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginEnd="12dp"
                android:layout_centerVertical="true"
                android:src="@drawable/img_vocabulary"/>

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>